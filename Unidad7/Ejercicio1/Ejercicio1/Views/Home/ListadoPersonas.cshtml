@{
    //paso el viewbag a una lista de tipo CLSPersona
        //CAMBIAR CON MODEL
    var listado = ViewData["ListadoPersonas"] as List<Ejercicio1.Models.Entities.CLSPersona>;
}

<div style="text-align: center; font-family: Arial, sans-serif; margin-top: 40px;">

    <h1 style="margin-bottom: 20px;">Listado de personas</h1>

    <table style="border-collapse: collapse; border: 1px solid black; margin: 0 auto; width: 60%;">
        <tr style="background-color: #f2f2f2;">
            <th style="border: 1px solid black; padding: 8px;">ID</th>
            <th style="border: 1px solid black; padding: 8px;">NOMBRE</th>
            <th style="border: 1px solid black; padding: 8px;">EDAD</th>
        </tr>
        @foreach (var persona in listado)
        {
            <tr>
                <td style="border: 1px solid black; padding: 8px;">@persona.ID</td>
                <td style="border: 1px solid black; padding: 8px;">@persona.nombre</td>
                <td style="border: 1px solid black; padding: 8px;">@persona.edad</td>
            </tr>
        }
    </table>

    <div style="margin-top: 20px; display: flex; justify-content: center; gap: 15px;">
        @Html.ActionLink("Ir a Index", "Index", null, new { @style = "text-decoration: none; padding: 10px 15px; background-color: #007BFF; color: white; border-radius: 4px;" })
        @Html.ActionLink("Ir a PropiedadesPersona", "PropiedadesPersona", null, new { @style = "text-decoration: none; padding: 10px 15px; background-color: #28A745; color: white; border-radius: 4px;" })
    </div>

</div>
